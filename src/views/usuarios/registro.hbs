<div class="row">
    <div class="col-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Registrar usuario
            </div>
            <div class="card-body">
                <form action="/usuarios/registro" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nombre" placeholder="nombre" value="{{nombre}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="usuario" placeholder="usuario" value="{{usuario}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="clave" placeholder="clave">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="confirma_clave" placeholder="confirma clave">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Registrar Usuario</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>